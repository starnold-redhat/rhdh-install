apiVersion: v1
kind: Pod
metadata:
  name: "{{ item.name }}"
  namespace: ${{values.system}}
  labels:
    app: "molecule-test-container"
spec:
  containers:
    - name: molecule
      image: "{{ item.image }}"
      workingDir: "{{ item.workingDir }}"
      ports:
        - containerPort: 80
      #command: [ "sleep" ]
      #args: [ "infinity" ]
      tmpfs:
        - /run
        - /tmp
      volumes:
        - /sys/fs/cgroup:/sys/fs/cgroup:ro
      capabilities:
        - SYS_ADMIN
      #command:
      #  - "/sbin/init"
      pre_build_image: true
      securityContext:
        runAsUser: 0
        capabilities:
          add: ["CAP_SETFCAP"]
---
apiVersion: v1
kind: Service
metadata:
  name: "{{ item.name }}"
  namespace: ${{values.system}}
spec:
  selector:
    app: molecule-test-container
  ports:
    - protocol: TCP
      port: 80        # Service port
      targetPort: 80  # Pod container port
  type: ClusterIP     # Use NodePort or LoadBalancer to expose externally
---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: {{ item.name }}
  namespace: ${{values.system}} 
spec:
  
  to:
    kind: Service
    name: molecule-ubi8-python
    weight: 100
  port:
    targetPort: 80
  wildcardPolicy: None